<article id="{{ x.data.name | slug }}">
    <div class="columns">
        <div class="column is-one-quarter">
            <img src="/img/{{x.data.img}}" alt="">
        </div>

        <div class="column">
            <h4 class="title is-4">{{ x.data.name }}</h4>
            <p>{{ x.templateContent | safe }}</p>
            <br>
            <ol>
                {%- for etape in x.data.etapes -%}
                    <li>{{etape}}</li>
                {%- endfor -%}
            </ol>
        </div>
    </div>
</article>
