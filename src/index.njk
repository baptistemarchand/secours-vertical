<script>
$(document).ready(function() {
    
    var start_width = $("main").width();
    var max_width = $("body").width() * 0.9;
    var mobile = false;
    if ($("body").width()<600){
        mobile = true;
    };

    function grow(page, start_page, end_page){
        if(page > start_page  && page < end_page){
            var new_width = start_width+(page-start_page)*(max_width-start_width)/(end_page-start_page)
            $("main").width(new_width);
        }else if (page < start_page){
            $("main").width(start_width);
        }else if (page > end_page){
            $("main").width(max_width);
        };
    };

    function fade_opacity(target, start_page, end_page, start_opacity, end_opacity, page){
        if(page >= start_page  && page <= end_page){
            var new_opacity = start_opacity+(page-start_page)*(end_opacity-start_opacity)/(end_page-start_page)
            $(target).fadeTo(0, new_opacity);
            $(target).css("visibility", "visible");
        }else if (page < start_page){
            $(target).fadeTo(0, start_opacity);
        }else if (page > end_page){
            $(target).fadeTo(0, end_opacity);
        };
    };

    function fade_border(target, start_page, end_page, start_opacity, end_opacity, page){
        if(page >= start_page  && page <= end_page){
            var new_opacity = start_opacity+(page-start_page)*(end_opacity-start_opacity)/(end_page-start_page)
            $(target).css("border", "3px solid rgba(255, 255, 255, " + new_opacity + ")");
        }else if (page < start_page){
            $(target).css("border", "3px solid rgba(255, 255, 255, " + start_opacity + ")");
        }else if (page > end_page){
            $(target).css("border", "3px solid rgba(255, 255, 255, " + end_opacity + ")");
        };
    };

  $("main").scroll(function() { //when user scrolls
        var page = $("main").scrollTop() / $("main").height() + 1; //current page in view
        $("#arrow").hide(); //hide arrow down

        if (!mobile){

            grow(page, 2.8, 3.2)
            fade_border("main", 3.2, 3.8, 0.6, 0, page );
            fade_opacity("footer", 2.5, 3, 0, 1, page );
            fade_opacity("#logo", 1.5, 2, 0, 1, page );
            
            if(page > 2.5 ){
            $("body").addClass("fade_to_color");
            $("body").removeClass("fade_to_bw");
            }else if ($("body").hasClass("fade_to_color")){
            $("body").removeClass("fade_to_color");
            $("body").addClass("fade_to_bw");
            };
        }; //end if not mobile
    console.log(page)
  }); //end scroll main

}); // end document ready

</script>
