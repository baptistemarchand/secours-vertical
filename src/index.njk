        @import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Sen:400,800&display=swap');

        * {
        box-sizing: border-box;
        }

        ::-webkit-scrollbar {
             display: none;
            }

        html{
            font-size: 100%;
            padding: 0;
            margin: 0;
        }
        
        body{
            display: flex;
            flex-direction: column;
            width: 100vw;
            height: 100vh;
            align-items: center; /* horizontal */
